@model Assignment_3.Models.Employee

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1 {
        color: #007bff;
        text-align: center;
        font-weight: bold;
    }

    h4 {
        color: #007bff;
        text-align: center;
    }

    hr {
        border-top: 2px solid #007bff;
    }

    .card {
        width: 50%;
        margin: 20px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 20px;
    }

    dl.row {
        width: 100%;
        margin-top: 20px;
    }

    dt, dd {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
    }

    dt {
        color: #007bff;
        text-align: right; /* Align dt to the right */
    }

    th {
        background-color: #007bff;
        color: black;
        vertical-align: middle;
        text-align: center;
    }

    dl.row:hover {
        background-color: #f8f9fa;
    }

    .btn {
        padding: 6px 12px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #343a40;
        border: 1px solid #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
            color: #343a40;
        }

    .link-light {
        color: #007bff;
        text-decoration: none;
    }

        .link-light:hover {
            text-decoration: underline;
        }
</style>

<br />
<h1>Employee Details</h1>

<div class="card">
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EmpId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.EmpId)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EmpName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.EmpName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.JoiningDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.JoiningDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.City)
            </dd>
        </dl>
    </div>

    <a id="btn" href="@Url.Action("Index")" class="btn btn-warning link-light rounded-pill"> <i class="bi bi-arrow-left-short"></i> Back To List</a>

</div>
