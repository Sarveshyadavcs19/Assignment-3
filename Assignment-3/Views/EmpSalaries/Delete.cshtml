@model Assignment_3.Models.EmpSalary

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1, h2, h3 {
        text-align: center;
        color: #007bff;
        font-weight: bold;
    }

    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .confirmation-text {
        margin-bottom: 20px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
        float: left;
        text-align: right;
        justify-content: center;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        margin-right: 10px;
    }

    .link-light {
        color: #fff;
        text-decoration: none;
    }

        .link-light:hover {
            text-decoration: underline;
        }

    .btn-back {
        color: #007bff;
        float: right;
        text-align: right;
    }

        .btn-back:hover {
            text-decoration: underline;
        }
</style>

<br />
<h1>Delete EmpSalary</h1>

<div class="delete-container">
    <h3 class="confirmation-text">Are you sure you want to delete this?</h3>

    <hr />

    <dl class="row dl-horizontal">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalaryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalaryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreditDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmpId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger btn-delete float-end rounded-pill link-light" />
        <button class="btn btn-warning rounded-pill link-light"> <a class="link-light" asp-action="Index"> <i class="bi bi-arrow-left-short"></i> Back To List </a> </button>
    </form>
</div>
